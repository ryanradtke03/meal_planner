{
    "compilerOptions": {
      "types": ["node"],
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
  }